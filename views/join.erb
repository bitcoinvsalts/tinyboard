<form class="signup-form" method="post" action="/join">
  <h4 class="signup-form-header">
    Join the conversation.
  </h4>

  <section>
    <label for="initials" class="signup-form-label">Two-character initials:</label>
    <input placeholder="AA" class="mla" name="initials" type="text">
  </section>

  <section class="signup-form-color-section">
    <label class="signup-form-label">
      Favorite color:
    </label>

    <section>
      <label class="black mla">
        <input name="theme" value="black" type="radio">
        <span></span>
      </label>

      <label class="gray">
        <input name="theme" value="gray" type="radio">
        <span></span>
      </label>

      <label class="blue">
        <input name="theme" value="blue" type="radio" checked="">
        <span></span>
      </label>

      <label class="purple">
        <input name="theme" value="purple" type="radio">
        <span></span>
      </label>

      <label class="red">
        <input name="theme" value="red" type="radio">
        <span></span>
      </label>

      <label class="orange">
        <input name="theme" value="orange" type="radio">
        <span></span>
      </label>

      <label class="green">
        <input name="theme" value="green" type="radio">
        <span></span>
      </label>
    </section>
  </section>
  <button type="submit">Join</button>
</form>
